{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"strict": true,
		"target": "esnext",
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules",
		"public/**/*",
		"**/dist/**/*",
		"**/template/**/*",
		"**/__tests__/**/*",
		"**/__testfixtures__/**/*",
		"**/*.spec.*",
		"**/*.stories.*"
	],
	"typeRoots": [
		"./global.d.ts"
	]
}